<resources>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Material 3 新属性 -->
        <item name="colorPrimaryContainer">@color/light_blue_100</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondary">@color/blue_grey_500</item>
        <item name="colorSecondaryContainer">@color/blue_grey_100</item>
        <item name="colorOnSecondaryContainer">@color/blue_grey_900</item>
        <item name="colorSurfaceVariant">@color/light_blue_50</item>
        <item name="colorOnSurfaceVariant">@color/blue_grey_700</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="AppTheme.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.ColorSchemeDefault" parent="AppTheme.ColorSchemeDefault" />
    <style name="ThemeOverlay.ColorSchemeOriginal" parent="ColorSchemeOriginal" />

    <style name="AppTheme.ColorSchemeDefault" parent="AppTheme">
        <item name="buttonEmpty">@color/light_blue_50</item>

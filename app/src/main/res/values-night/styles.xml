<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.Dark">
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
        <item name="android:windowBackground">#282828</item>
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorAccent">@color/light_blue_A200</item>
        <item name="colorPrimaryContainer">@color/blue_grey_800</item>
        <item name="colorOnPrimaryContainer">@color/light_blue_50</item>
        <item name="colorSecondary">@color/blue_grey_200</item>
        <item name="colorSecondaryContainer">@color/blue_grey_700</item>
        <item name="colorOnSecondaryContainer">@color/blue_grey_50</item>
        <item name="colorSurfaceVariant">@color/blue_grey_900</item>
        <item name="colorOnSurfaceVariant">@color/blue_grey_200</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />

    <style name="ThemeOverlay.ColorSchemeDefault" parent="AppTheme.ColorSchemeDefault">
        <item name="buttonEmpty">@color/darkgrey</item>
        <item name="buttonEmptyText">@color/white</item>
    </style>
    
    <style name="ThemeOverlay.ColorSchemeOriginal" parent="ColorSchemeOriginal">
        <item name="buttonEmpty">@color/darkgrey</item>
        <item name="buttonEmptyText">@color/white</item>
    </style>
</resources>